.navbar.navbar-warning#user-nav
  %ul.nav.navbar-nav.navbar-left
    %li
      = link_to "Home", root_path, class: "navbar-brand"
  -if user_signed_in?
    %span
      Logged in as 
      %strong
        = current_user.name
      %strong
        =current_user.email        
    -if current_user.role==="admin"
      = link_to "Admin page", '/admin', class: "navbar-brand" 
      = link_to "Rails admin page", rails_admin.dashboard_path, class: "navbar-brand"
    = link_to 'My orders', orders_path , class: "navbar-brand"
    %ul.nav.navbar-nav.navbar-right
      %li 
        = link_to 'Edit profile', edit_user_registration_path , class: "navbar-brand"
      %li 
        = link_to "Logout", destroy_user_session_path, method: :get, class: "navbar-brand"
  -else
    %ul.nav.navbar-nav.navbar-right
      %li
        = link_to "Sign up", new_user_registration_path, class: "navbar-brand"
      %li
        = link_to "Login", new_user_session_path, class: "navbar-brand"    